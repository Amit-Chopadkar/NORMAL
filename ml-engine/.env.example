# TourGuard ML Engine Environment Configuration
# Copy this file to .env and update the values

# ============ Ethereum Blockchain ============

# Ethereum RPC URL (default: Ganache local)
# For Ganache: http://127.0.0.1:8545
# For Polygon Mumbai: https://rpc-mumbai.maticvigil.com
# For Polygon Mainnet: https://polygon-rpc.com
ETH_RPC_URL=http://127.0.0.1:8545

# Chain ID
# Ganache: 1337
# Polygon Mumbai: 80001
# Polygon Mainnet: 137
ETH_CHAIN_ID=1337

# Private Key for signing transactions
# WARNING: Never commit real private keys!
# Default is Ganache's first account key
ETH_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Deployed Contract Address (set after deploying)
# Run: python -m blockchain.deploy
ETH_CONTRACT_ADDRESS=

# Is the network Proof-of-Authority (true for Polygon)
ETH_IS_POA=false

# Gas settings
ETH_GAS_LIMIT=3000000
ETH_GAS_PRICE_GWEI=20

# ============ ML Engine ============

# Alert buffer (minutes between repeated alerts)
ML_ENGINE_ALERT_BUFFER_MINUTES=5

# Inactivity threshold (minutes)
ML_ENGINE_INACTIVITY_MINUTES=15

# Route deviation threshold (meters)
ML_ENGINE_ROUTE_DEVIATION_METERS=120
